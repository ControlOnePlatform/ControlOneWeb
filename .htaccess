# php -- BEGIN cPanel-generated handler, do not edit
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82___lsphp .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

# --- REGLAS CONTROL ONE ---
Options -Indexes
RewriteEngine On

# 1. Forzar HTTPS y quitar WWW
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Soporte para imágenes modernas (AVIF)
<IfModule mod_mime.c>
  AddType image/avif .avif
</IfModule>

# --- REGLAS ESPECÍFICAS ---
# ¡ESTO DEBE IR ANTES DE LAS REGLAS GENÉRICAS!

# >>> NUEVO: Mapa del sitio dinámico
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Redirigir /blog a blog.php
RewriteRule ^blog/?$ blog.php [L]

# Redirigir /post/nombre-articulo a post.php
RewriteRule ^post/([a-zA-Z0-9-]+)$ post.php?slug=$1 [L,QSA]

# 3. URLS LIMPIAS (Regla Genérica)
# Aplica solo si no es un archivo o carpeta real
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# 4. Caché (Velocidad)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# --- SEGURIDAD AVANZADA (HEADERS) ---
<IfModule mod_headers.c>
  # Protege contra ataques de "Clickjacking" (nadie puede poner tu web en un iframe)
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Evita que el navegador "adivine" tipos de archivos (protege contra inyecciones)
  Header always set X-Content-Type-Options "nosniff"
  
  # Activa el filtro anti-XSS de los navegadores antiguos
  Header always set X-XSS-Protection "1; mode=block"
  
  # Controla cuánta info pasas a otros sitios cuando alguien hace clic en un link tuyo
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # (Opcional) Seguridad estricta de transporte (HSTS) - Solo si tienes SSL 100% estable
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>